<div class="dropdown selecteur-statut-facture">
  <div class="dropdown-trigger">
    <a class="button is-small <%= css_class_for_status(facture.facture_statut) %> " aria-haspopup="true" aria-controls="dropdown-menu">
      <span class="nom"><%= facture.facture_statut.nom %></span>
      <span class="icon is-small">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
    </a>
  </div>
  <div class="dropdown-menu" id="dropdown-menu" role="menu">
    <div class="dropdown-content">
      <% current_user.facture_statuts.order(:nom).each do |statut| %>
      <a href="<%= facture_path(facture) %>" data-facture-statut-id="<%= statut.id %>" class="dropdown-item facture-statut-item <%= 'is-active' if statut == facture.facture_statut %> <%= css_class_for_status(statut) %>"><%= statut.nom %></a>
      <% end %>
    </div>
  </div>
</div>
