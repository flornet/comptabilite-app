<nav class="navbar is-light is-fixed-top">
  <%= back_link_to_root() %>
  <%= page_title("Clients") %>
</nav>

<div class="action-buttons">
    <div class="field is-grouped">
      <p class="control">
        <%= link_to 'Nouveau client', new_client_path, class: "button is-primary" %>
      </p>
    </div>
</div>

<table class="table is-fullwidth is-hoverable">
  <thead>
    <tr>
      <th class="has-text-left">Nom</th>
      <th class="has-text-left">Ville</th>
      <th class="has-text-left">Email</th>
      <th class="has-text-left">Telephone</th>
      <th class="has-text-left">Taxe</th>
      <th class="has-text-left">Versions</th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr class='clickable-row is-clickable' data-href='<%= url_for edit_client_path(client)%>'>
        <td><%= client.nom %></td>
        <td><%= client.ville %></td>
        <td><%= client.email %></td>
        <td><%= client.telephone %></td>
        <td><%= client.taxe.nom %></td>
        <td><%= client.versions.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
