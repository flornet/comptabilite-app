<div class="field">
  <div class="control">
    <%= form.text_field :designation, class: "input is-medium has-text-primary-color has-text-weight-bold",  placeholder: :designation %>
  </div>
</div>

<div class="field has-addons">
  <p class="control">
    <span class="button is-static">
      Devis
    </span>
    <%= form.hidden_field :type_document, value: "Devis" %>
  </p>
  <p class="control">
    <span class="button is-static">
      <%= numero_pour_devis(@devi) %>
    </span>
  </p>
</div>

<div class="columns">
  <div class="column">
    <div class="field has-addons">
      <p class="control">
        <span class="button is-static">
          Date d'émission :
        </span>
      </p>
      <p class="control">
        <%= form.text_field :date, type: "date", class: "input flatpickr" %>
      </p>
    </div>
  </div>

  <div class="column">
    <div class="field has-addons">
      <p class="control">
        <span class="button is-static">
          Délai de validité :
        </span>
      </p>
      <p class="control is-fullwidth">
        <%= form.text_field :date_validite, class: "input" %>
      </p>
    </div>
  </div>
</div>
