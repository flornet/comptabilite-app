<style type="text/css">
  .has-bg-primary-color {
    background-color: <%= @facture.contrast_color %> !important;
    color: #ffffff !important;
  }
  .has-text-primary-color {
    color: <%= @facture.contrast_color %> !important;
  }
</style>

<div class="card content facture-feuille">

  <div class="tile is-ancestor">
    <div class="tile is-parent is-5">
        <div class="logo has-text-centered">
            <%= image_tag wicked_pdf_asset_base64(@facture.logo) %>
        </div>
    </div>
    <div class="tile is-parent is-2"></div>
    <div class="tile is-parent is-5"></div>
  </div>
  <div class="tile is-ancestor">
    <div class="tile is-parent is-5">
        <%= simple_format(@facture.coordonnees_societe, class: "has-text-left coordonnees") %>
    </div>
    <div class="tile is-parent is-2"></div>
    <div class="tile is-parent is-5">
      <div class="tile is-child">
        <%= render "factures/partials/client_show" %>
      </div>
    </div>
  </div>

  <div class="contenu-principal">
    <%= render "factures/partials/entete_show" %>
    <div class="facture-lignes">
      <table class="table is-fullwidth is-narrow" id="table_lignes_facture">
        <thead>
          <tr>
            <th class="has-text-left has-bg-primary-color" colspan="2">DÃ©signation</th>
            <th class="is-narrow has-bg-primary-color">Montant HT</th>
          </tr>
        </thead>
        <tbody>
        <% @facture.facture_lignes.each do |facture_ligne| %>
            <%= render "factures/partials/facture_ligne_show", facture_ligne: facture_ligne %>
        <% end %>
        </tbody>
        <tfoot>
          <%= render "factures/partials/pied_show" %>
        </tfoot>
      </table>
    </div>

    <div class="facture-mentions">
      <%= render "factures/partials/mentions_show" %>
    </div>

  </div>

</div>
