<div class="dropdown selecteur-statut devis">
  <div class="dropdown-trigger">
    <a class="button is-small <%= css_class_for_status(devi.devis_statut) %> " aria-haspopup="true" aria-controls="dropdown-menu">
      <span class="nom"><%= devi.devis_statut.nom %></span>
      <span class="icon is-small">
        <i class="fa fa-angle-down" aria-hidden="true"></i>
      </span>
    </a>
  </div>
  <div class="dropdown-menu" id="dropdown-menu" role="menu">
    <div class="dropdown-content">
      <% current_user.devis_statuts.order(:nom).each do |statut| %>
      <a href="<%= devi_path(devi) %>" data-devi-statut-id="<%= statut.id %>" class="dropdown-item devi-statut-item <%= 'is-active' if statut == devi.devis_statut %> <%= css_class_for_status(statut) %>"><%= statut.nom %></a>
      <% end %>
    </div>
  </div>
</div>
