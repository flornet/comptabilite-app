<tr>
  <td><%= link_to_add_line "Ajouter une ligne", form, :facture_lignes %></td>
  <td class="is-narrow">TOTAL HT</td>
  <td>
    <div class="field">
      <div class="control">
        <%= form.hidden_field :montant_ht, readonly: "readonly" %>
        <span id="facture_montant_ht_dummy"><%= montant_humanise(@facture.montant_ht) %></span>
      </div>
    </div>
  </td>
</tr>
<tr>
  <td></td>
  <td class="is-narrow">TVA <span class="select">
    <%= form.select :taxe_id, options_for_select(current_user.taxes.order(:nom).map { |t| [t.nom, t.id, {'data-taux' => t.taux }] }, @facture.taxe.id) %>
  </span></td>
  <td>
    <%= form.hidden_field :montant_tva, readonly: "readonly" %>
    <span id="facture_montant_tva_dummy"><%= montant_humanise(@facture.montant_tva) %></span>
  </td>
</tr>
<tr>
  <td></td>
  <td class="is-narrow">TOTAL TTC</td>
  <td>
    <div class="field">
      <div class="control">
        <%= form.hidden_field :montant_ttc, readonly: "readonly" %>
        <span id="facture_montant_ttc_dummy"><%= montant_humanise(@facture.montant_ttc) %></span>
      </div>
    </div>
  </td>
</tr>
